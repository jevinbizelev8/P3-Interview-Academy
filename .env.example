# SeaLion API Configuration (optional - leave blank or set to "disabled" to rely on OpenAI)
SEALION_API_KEY=your_sealion_api_key_here
SEA_LION_API_KEY=your_sealion_api_key_here

# OpenAI Configuration (primary AI provider)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Replit Auth Configuration
REPL_ID=your_repl_id_here
SESSION_SECRET=your_session_secret_here
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.dev

# Development Configuration
NODE_ENV=development

# Authentication Control
# Set to "true" to bypass authentication in development (NOT FOR PRODUCTION)
# When enabled, uses mock user for testing. NEVER set to true in production!
BYPASS_AUTH=false
