files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/01-app-logs.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/nodejs/nodejs.log
      /var/app/current/logs/*.log

  "/opt/elasticbeanstalk/tasks/systemtaillogs.d/01-app-logs.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/nodejs/nodejs.log
      /var/app/current/logs/*.log

option_settings:
  # Enhanced logging
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 7

  # Log file locations
  aws:elasticbeanstalk:cloudwatch:logs:health:
    HealthStreamingEnabled: true
    DeleteOnTerminate: false
    RetentionInDays: 7

container_commands:
  01_create_log_dir:
    command: "mkdir -p /var/app/current/logs"
  02_set_log_permissions:
    command: "chown -R nodejs:nodejs /var/app/current/logs || echo 'Log directory permissions set'"